<!-- Root Layout -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/atm"
    android:layout_height="match_parent"
    android:orientation="vertical" 
     >

<!-- First Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
      
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="READ ACCOUNT DETAILS :"
            android:textSize="25sp"
           android:textColor="#3da8c9"
            android:textStyle="italic" />
        
    </LinearLayout>
<!-- First Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
      
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ACC no:"
           android:textColor="#3da8c9"
            android:textSize="15sp"
            android:textStyle="italic" />
        <EditText
            android:id="@+id/accno"
            android:inputType="text"
            android:hint=""
             android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    
    <!-- First Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
      
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bank Name :"
              android:textColor="#3da8c9"
            android:textSize="15sp"
            android:textStyle="italic" />
        <EditText
            android:id="@+id/bankname"
            android:inputType="text"
            android:hint=""
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <!-- Second Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        
        android:orientation="horizontal" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Branch:"
              android:textColor="#3da8c9"
            android:textSize="15sp"
            android:textStyle="italic" />
        <EditText
            android:id="@+id/branch"
            android:inputType="text"
            android:hint=""
             android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    
    
    <!-- THird Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        
        android:orientation="horizontal" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ACC Name :"
              android:textColor="#3da8c9"
            android:textSize="15sp"
            android:textStyle="italic" />
        <EditText
            android:id="@+id/accname"
            android:inputType="text"
            android:hint=""
             android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    
    
     <!-- THird Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        
        android:orientation="horizontal" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ACC Type:"
              android:textColor="#3da8c9"
            android:textSize="15sp"
            android:textStyle="italic" />
        <EditText
            android:id="@+id/acctype"
            android:inputType="text"
            android:hint=""
             android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    
     
     <!-- THird Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        
        android:orientation="horizontal" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone No:"
              android:textColor="#3da8c9"
            android:textSize="15sp"
            android:textStyle="italic" />
        <EditText
            android:id="@+id/phone"
            android:inputType="text"
            android:hint=""
             android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
  <!-- THird Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        
        android:orientation="horizontal" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email Id"
              android:textColor="#3da8c9"
            android:textSize="15sp"
            android:textStyle="italic" />
        <EditText
            android:id="@+id/emailid"
            android:inputType="text"
            android:hint=""
             android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    
    <!-- THird Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        
        android:orientation="horizontal" >
        
    </LinearLayout>

    <Button
         android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BACK"
          android:background="@drawable/user_profile_image_background"
       android:layout_gravity="center_vertical|center_horizontal"
        android:textSize="15sp"
        android:textStyle="italic" />

</LinearLayout>